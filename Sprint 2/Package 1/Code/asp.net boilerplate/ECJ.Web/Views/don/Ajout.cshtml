@model ECJ.Web.Models.tblDon

@{
    ViewBag.Title = "Ajout";
}

<h2>Créer un don</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="form-group">
            <label>Nom du Commanditaire : </label><label>@Model.noDon</label>
        </div>

        <div class="form-group">
            <label>Montant à donner : </label>
            <input class="form-control" type="text" name="Number" required maxlength="25" minlength="1">
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajout" class="btn btn-primary pull-right" />
            </div>
        </div>

    </fieldset>
}