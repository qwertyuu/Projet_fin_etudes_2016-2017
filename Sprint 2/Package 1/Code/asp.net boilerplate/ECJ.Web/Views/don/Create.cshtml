@{
    ViewBag.Title = "Ajout";
}

<h2>Faire un don</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <input type="hidden" name="noCommanditaire" value="@ViewBag.noCommanditaire" />
        <div class="form-group">
            <label>Commanditaire</label>
            <div class="well well-sm">
                @ViewBag.nomCommanditaire
            </div>
        </div>

        <div class="form-group">
            <label>Sous-événement / Événement</label>
            @Html.DropDownList("noSousEvenement", (SelectList)ViewBag.noSousEvenement, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Montant (en $)</label>
            <input class="form-control montant" type="number" name="montant" min="1" step="0.01" max="1000000" required>
        </div>

        <div class="form-group">
            <label>Date du don</label>
            <input class="form-control dp" type="text" name="dateDon" required>
        </div>

        <div class="form-group pull-right">
            <button class="btn btn-primary blue valid"><i class="fa fa-save"></i> <span>Commanditer</span></button>
            <a onclick="window.history.back()" class="btn btn-default" data-dismiss="modal">Annuler</a>
        </div>
}
