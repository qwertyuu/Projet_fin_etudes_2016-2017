@model ECJ.Web.Models.tblDon

@{
    ViewBag.Title = "Ajout";
}

<h2>Créer un don</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label>Commanditaires</label>
            @Html.DropDownList("noCommanditaire",null, htmlAttributes: new { @class = "form-control" })
    </div>

        <div class="form-group">
            <label>Sous-évènements</label>
            @Html.DropDownList("noSousEvenement", null, htmlAttributes: new { @class = "form-control" })
        </div>

            <div class="form-group">
                <label>Montant</label>
                <input class="form-control" type="number" name="montant" required>
            </div>

            <div class="form-group">
                <label>Date de don</label>
                <input class="form-control dp" type="text" name="dateDon" required>
            </div>

            <div class="form-group pull-right">
                <button class="btn btn-primary blue"><i class="fa fa-save"></i> <span>Ajouter</span></button>
                <button class="btn btn-default pull-right" data-dismiss="modal" onclick="goBack()">Annuler</button>
            </div>
}

<script>
    function goBack() {
        window.history.back();
    }
</script>
