@model ECJ.Web.Models.tblDon

@{
    ViewBag.Title = "Ajout";
}

<h2>Faire un don</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label>Commanditaires</label>
        <label class="form-control" name="noCommanditaire" value="@ViewBag.nomCommanditaire">@ViewBag.nomCommanditaire</label>
    </div>

    <div class="form-group">
        <label>Sous-évènements</label>
        @Html.DropDownList("noSousEvenement", null, htmlAttributes: new { @class = "form-control" })
    </div>

        <div class="form-group">
            <label>Montant</label>
            <input class="form-control" type="number" name="montant" required>
        </div>

            <div class="form-group">
                <label>Date de don</label>
                <input class="form-control dp" type="text" name="dateDon" required>
            </div>

            <div class="form-group pull-right">
                <button class="btn btn-primary blue"><i class="fa fa-save"></i> <span>Ajouter</span></button>
                <a onclick="window.history.back()" class="btn btn-default" data-dismiss="modal">Retour à un détail d'événement</a>
            </div>
}
