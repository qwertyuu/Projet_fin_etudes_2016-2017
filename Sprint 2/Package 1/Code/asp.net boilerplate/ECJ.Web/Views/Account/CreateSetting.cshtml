@model ECJ.Web.Models.tblDon

@{
    ViewBag.Title = "CreateSetting";
}

<h2>Sécuritée du compte</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label>Question  Secrète </label>
        @Html.DropDownList("noSousEvenement", null, htmlAttributes: new { @class = "form-control" })
        <input class="form-control" type="text" name="QS" required>
    </div>

    <div class="form-group">
        <label>Affiche</label>
        <input type="file" name="pic" accept="image/png,image/jpeg,image/gif">
    </div>
    
    <div class="form-group pull-right">
        <button class="btn btn-primary blue valid"><i class="fa fa-save"></i> <span>Confirmer</span></button>
    </div>
}