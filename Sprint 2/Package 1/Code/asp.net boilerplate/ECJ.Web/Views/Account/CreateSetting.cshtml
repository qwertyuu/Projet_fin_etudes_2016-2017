@{
    ViewBag.Title = "CreateSetting";
}

<h2>Sécuritée du compte</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label>Entrez un mot de passe</label>
        <input class="form-control" type="password" name="PasswordChange">
    </div>

    <div class="form-group">
        <label>Écrire à nouveau le mot de passe</label>
        <input class="form-control" type="password" name="PasswordChange2">
    </div>

        <div class="form-group">
            <label>Changer l'image de profil</label>
            <input type="file" name="pic" accept="image/png,image/jpeg,image/gif">
        </div>

        <div class="form-group">
            <label>Question  Secrète </label>
            <select class = "form-control">
                <option>Quel est le nom de votre père ?</option>
                <option>Quel est le nom de votre mère ?</option>
                <option>Quel est larue où vous avez grandi ?</option>
            </select>
            @*@Html.DropDownList("Question", ViewBag.Question, htmlAttributes: new { @class = "form-control" })*@
            <input class="form-control" type="text" name="Reponse" required>
        </div>

            <div class="form-group pull-right">
                <button class="btn btn-primary blue valid"><i class="fa fa-save"></i> <span>Confirmer</span></button>
            </div>
}
