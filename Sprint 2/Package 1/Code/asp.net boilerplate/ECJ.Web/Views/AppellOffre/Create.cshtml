@model ECJ.Web.Models.tblAppelOffre

<h2>Appel d'offre</h2>
@using (Html.BeginForm())
{
    <form name="createPub" role="form" novalidate class="form-validation">

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Évènement</label>
            <div>
                @Html.DropDownList("noEvenement", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.noEvenement, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nom</label>
            <div>
                @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Date d'envoi</label>
            <div>
                @Html.EditorFor(model => model.dateEnvoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dateEnvoi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Date requise</label>
            <div>
                @*@Html.EditorFor(model => model.dateRequis, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.dateRequis, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.dateRequis, "{0:MM/dd/yyyy}", new { @class = "form-control default-date-picker" })
            </div>
        </div>

        <div class="form-group">
            Statut
            <div>
                @Html.DropDownList("noStatut", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.noStatut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Agence de publicité</label>
            <select name="type" class="form-control" required multiple>
                <option>Médiative</option>
                <option>Agence Masse</option>
                <option>Côté fleuve Inc</option>
            </select>
        </div>

        <div class="form-group">
            <label>Description</label>
            <div>
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>

        <br /><br /><br />
        <div class="pull-right">
            <button  class="btn btn-primary blue"><i class="fa fa-save"> </i> Soumettre</button>
            <a href="/AppellOffre/Index" class="btn btn-default" data-dismiss="modal">Annuler</a>
        </div>
    </form>

}
