@using Abp.Web.Mvc.Extensions
@model ECJ.Web.Models.tblAppelOffre

@section scripts
{
    @Html.IncludeScript("~/Views/AppellOffre/Create.js")
}

<h2>Appel d'offre</h2>
@using (Html.BeginForm())
{
    <form name="createPub" role="form" novalidate class="form-validation">

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.noAppelOffre)
        <div class="form-group">
            <label>Événement</label>
            <div>
                @Html.DropDownList("noEvenement", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.noEvenement, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nom</label>
            <div>
                @Html.TextBoxFor(model => model.nom, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Date d'envoi</label>
            <div>
                @Html.EditorFor(model => model.dateEnvoi, new { htmlAttributes = new { @class = "form-control dp", required = "required" } })
                @Html.ValidationMessageFor(model => model.dateEnvoi, "", new { @class = "text-danger" })
            </div>
        </div>

        <label>Heure d'envoi</label>
        <div class="form-group">
            <div class="col-md-4">
                <input type="number" name="heureEnvoi" required min="0" max="24" placeholder="Heure" maxlength="2" class="form-control"  value="@Model.dateRequis.Hour" />
            </div>
            <div class="col-md-4">
                <input type="number" name="minEnvoi" required min="0" max="60" placeholder="Minute" maxlength="2" class="form-control"  value="@Model.dateRequis.Minute" />
            </div>
            <div class="col-md-4">
                <input type="number" name="secondeEnvoi" min="0" max="60" placeholder="Seconde" maxlength="2" class="form-control" value="@Model.dateRequis.Second"/>

            </div>
        </div><br /><br />

        <div class="form-group">
            <label>Date requise</label>
            <div>
                @Html.EditorFor(model => model.dateRequis, new { htmlAttributes = new { @class = "form-control dp", required = "required" } })
                @Html.ValidationMessageFor(model => model.dateRequis, "", new { @class = "text-danger" })
            </div>
        </div>

        <label>Heure requise</label>
        <div class="form-group">
            <div class="col-md-4">
                <input type="number" name="heureRequise" required min="0" max="24" placeholder="Heure" maxlength="2" class="form-control"  value="@Model.dateRequis.Hour"/>
            </div>
            <div class="col-md-4">
                <input type="number" name="minRequise" required min="0" max="60" placeholder="Minute" maxlength="2" class="form-control" value="@Model.dateRequis.Minute" />
            </div>
            <div class="col-md-4">
                <input type="number" name="secondeRequise" min="0" max="60" placeholder="Seconde" maxlength="2" class="form-control" value="@Model.dateRequis.Second"/>
            </div>
        </div><br /><br />
        <div class="form-group">
            <label>Media</label>
            <div>
                @Html.DropDownList("noMedia", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.noMedia, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="form-group">
                <label>Agence de publicité</label>
                <div>
                    @Html.ListBox("noAgencePub", (MultiSelectList)ViewBag.noAgencePub, new { @class = "form-control", @id = "agencePub" })
                </div>
            </div>

            <div class="form-group">
                <label>Description</label>
                <div>
                    @Html.TextAreaFor(model => model.description, new { @class = "form-control", @rows = "5" })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>

            <br /><br /><br />
            <div class="pull-right">
                <button class="btn btn-primary blue valid" type="submit" value="Save" name="save" onclick="return IsAgenceSelect(this) == false"><i class="fa fa-save"> </i> Sauvegarder en Création</button>
                <button class="btn btn-primary blue valid" value="Soumettre" name="save" onclick="return IsAgenceSelect(this) == true"><i class="fa fa-paper-plane"> </i> Sauvegarder et Soumettre</button>
                <a href="/AppellOffre/Index" class="btn btn-default" data-dismiss="modal">Annuler</a>
            </div>
</form>

}
