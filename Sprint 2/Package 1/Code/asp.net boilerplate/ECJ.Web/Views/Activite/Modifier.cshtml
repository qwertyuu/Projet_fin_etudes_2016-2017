@{
    ViewBag.Title = "Ajout";
}
@model ECJ.Web.Models.tblActivite

<h2>Activite</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <input type="hidden" name="noEvenement" value="@Model.noActivite">
        <div class="form-group">
            <label>Nom du responsable</label>
            <input class="form-control" type="text" name="nom" value="@Model.nomResponsable" required>
        </div>
        <div class="form-group">
            <label>Etat : Choisir entre 0 et 1 (0 etant réalisé, 1 etant non-réalisé)</label>
            <input class="form-control" type="number" max="1" min="0" name="nom" value="@Model.etat" required>
        </div>

        <div class="form-group">
            <label>Date de Création</label>
            <input class="form-control dp" type="text" name="datefin" value="@String.Format("{0:yyyy/MM/dd}", Model.dateCreation)" required>
        </div>

        <div class="form-group">
            <label>Tâches</label>
            <input class="form-control" type="text" name="nom" value="@Model.tache">
        </div>

        <div class="form-group">
            <label>Details</label>
            <input class="form-control" type="text" name="nom" value="@Model.detail" required>
        </div>

        <div class="form-group">
            <div>
                <a href="/Events/Index" class="btn btn-sm btn-primary pull-left" title="Index"> Retourner à la liste</a>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary blue pull-right"><i class="fa fa-save"></i> <span>Enregistrer</span></button>
            </div>
        </div>
    </div>
}