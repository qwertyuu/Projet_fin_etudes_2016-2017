@model ECJ.Web.Models.tblActivite
@{
    ViewBag.Title = "Details";
}

<form name="createPub" role="form" novalidate class="form-validation">

    <div class="form-group">
        <label>Nom du responsable</label>
        <div class="well well-sm">
            @Model.nomResponsable
        </div>
    </div>

    <div class="form-group">
        <label>Etat (0 = réalisé, 1 = non-réalisé)</label>
        <div class="well well-sm">
            @Model.etat
        </div>
    </div>

    <div class="form-group">
        <label>Date de création</label>
        <div class="well well-sm">
            @String.Format("{0:yyyy/MM/dd}", Model.dateCreation)
        </div>
    </div>

    <div class="form-group">
        <label>Tâches</label>
        <div class="well well-sm">
            @Model.tache
        </div>
    </div>

    <div class="form-group">
        <label>Description</label>
        <div class="well well-lg">
            @Model.detail
        </div>
    </div>

    <button class="btn btn-default pull-right" data-dismiss="modal" onclick="goBack()">Retour à un détails d'événement</button>
</form>

<script>
function goBack() {
    window.history.back();
}
</script>