@model ECJ.Web.Models.tblCommanditaire

@{
    ViewBag.Title = "Index";
    ViewBag.ActiveMenu = "Commanditaires";
}

<h2>Commanditaires</h2>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modifier</title>
</head>

@using (Html.BeginForm("Edit", "Commanditaire", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <input type="hidden" name="noEvenement" value="@Model.noCommanditaire">
    <div class="form-group">
        <label>Nom Commanditaire</label>
        <input class="form-control" type="text" name="nom" value="@Model.nomCommanditaire" required>
    </div>
        <input type="hidden" name="noEvenement" value="@Model.noCommanditaire">
        <div class="form-group">
            <label>Contact</label>
            <input class="form-control" type="text" name="nom" value="@Model.nomContact" required>
        </div>
    if (Model.logo != null)
    {
        <div class="form-group">
            <label>Supprimer l'affiche?</label>
            <input type="checkbox" name="SupprimerAffiche" value="1" />
        </div>
                    <div class="form-group">
                        <label>Modifier l'affiche (laisser vide pour garder l'ancienne)</label>
                        <input type="file" name="pic" accept="image/png,image/jpeg,image/gif">
                    </div>
                    <img width="200" src="@Url.Action("GetFile","commanditaire", new { id = Model.noCommanditaire})" alt="Logo" />
    }
    else
    {
        <div class="form-group">
            <label>Ajouter une affiche</label>
            <input type="file" name="pic" accept="image/png,image/jpeg,image/gif">
        </div>
    }
    <div class="form-group">
        <label>Lien hypertexte</label>
        <input class="form-control" type="text" name="url" value="@Model.url" required>
    </div>

                <div class="form-group">
                    <label>exte de présentation :</label>
                    <textarea class="form-control" rows="5" id="textArea" name="description" required>@Model.textePresentation</textarea>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" type="email" name="nom" value="@Model.courrielContact" required>
                </div>

                <div class="form-group">
                    <label>Numero de téléphone</label>
                    <input class="form-control" type="number" name="nom" value="@Model.numTel" required>
                </div>

                <div class="form-group">
                    <label>Extension</label>
                    <input class="form-control" type="number" name="nom" value="@Model.extension" required>
                </div>



                <div class="form-group pull-right">
                    <a href="/Commanditaire/Index" class="btn btn-sm btn-primary" title="Index"> Retourner à la liste</a>
                    <button type="submit" class="btn btn-primary blue"><i class="fa fa-save"></i> <span>Enregistrer</span></button>
                </div>
}