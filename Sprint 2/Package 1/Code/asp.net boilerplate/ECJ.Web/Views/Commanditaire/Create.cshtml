
@{
    ViewBag.Title = "Create";
}

<h2>Commanditaires</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="form-group">
            <label>Nom du commanditaire : </label>
            <input class="form-control" type="text" name="UserName" required maxlength="50" minlength="2">
        </div>
        <div class="form-group">
            <label>Nom du contact : </label>
            <input class="form-control" type="text" name="UserName" required maxlength="25" minlength="2">
        </div>

        <div class="form-group">
            <label>Prénom du contact : </label>
            <input class="form-control" type="text" name="UserName" required maxlength="25" minlength="2">
        </div>

        <div class="form-group">
            <label>Logo : </label>
            <input class="form-control" type="file" name="pic" accept="image/*">
        </div>

        <div class="form-group">
            <label>URL : </label>
            <input class="form-control" type="url" name="UserName" required maxlength="255" minlength="2">
        </div>

        <div class="form-group">
            <label>Texte de présentation : </label>
            <textarea class="form-control" rows="5" id="textArea" required></textarea>
        </div>

        <div class="form-group">
            <label>Courriel électronique : </label>
            <input class="form-control" type="email" name="UserName">
        </div>

        <div class="form-group">
            <label>Numéro de téléphone : </label>
            <input class="form-control" type="tel" name="UserName">
        </div>

        <div class="form-group">
            <label>Poste : </label>
            <input class="form-control" type="number" name="UserName">
        </div>

        <p>
            <input type="submit" value="Create" class="btn btn-primary pull-right" />
        </p>
    </fieldset>
}