
@{
    ViewBag.Title = "Ajout";
}
<h2>Créer un évènement</h2>

<form name="createPub" role="form" novalidate class="form-validation">


    <div class="form-group">
        <label>Nom</label>
        <input class="form-control" type="text" name="nom" required>
    </div>
    <div class="form-group">
        <label>Date de début</label>
        <input class="form-control" type="text" name="nom" required>
    </div>
    <div class="form-group">
        <label>Date de fin</label>
        <input class="form-control" type="text" name="nom" required>
    </div>
    <div class="form-group">
        <label>Lien hypertexte</label>
        <input class="form-control" type="text" name="nom" required>
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" rows="5" id="textArea" required></textarea>
    </div>
    <div class="form-group">
        <label>Affiche</label>
        <input type="file" name="pic" accept="image/*">
    </div>
    <div class="form-group pull-right">
        <button type="submit" class="btn btn-primary blue"><i class="fa fa-save"></i> <span>Ajouter</span></button>
        <a href="/Events" class="btn btn-default" data-dismiss="modal">Annuler</a>
    </div>
</form>