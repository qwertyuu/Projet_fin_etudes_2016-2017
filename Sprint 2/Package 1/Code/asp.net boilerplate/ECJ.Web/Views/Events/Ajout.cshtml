
@{
    ViewBag.Title = "Ajout";
}
<h2>Créer un évènement</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label>Nom</label>
        <input class="form-control" type="text" name="nom" required>
    </div>
    <div class="form-group">
        <label>Date de début</label>
        <input class="form-control dp" type="text" name="dateDebut" required>
    </div>
    <div class="form-group">
        <label>Date de fin</label>
        <input class="form-control dp" type="text" name="datefin" required>
    </div>
    <div class="form-group">
        <label>Lien hypertexte</label>
        <input class="form-control" type="text" name="url" required>
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" rows="5" id="description" name="description"></textarea>
    </div>
    <div class="form-group">
        <label>Affiche</label>
        <input type="file" name="pic" accept="image/png,image/jpeg,image/gif">
    </div>
    <div class="form-group pull-right">
        <button class="btn btn-primary blue"><i class="fa fa-save"></i> <span>Ajouter</span></button>
        <a href="/Events" class="btn btn-default" data-dismiss="modal">Annuler</a>
    </div>
}