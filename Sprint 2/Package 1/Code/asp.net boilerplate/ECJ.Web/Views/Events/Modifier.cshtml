
@{
    ViewBag.Title = "Ajout";
}
@model ECJ.Web.Models.tblEvenement
<h2>Modifier cet évènement</h2>

<form name="createPub" role="form" novalidate class="form-validation">
    <div class="form-group">
        <label>Nom</label>
        <input class="form-control" type="text" name="nom" value="@Model.nom" required>
    </div>
    <div class="form-group">
        <label>Date de début</label>
        <input class="form-control" type="text" name="nom" value="@Model.dateDebut" required>
    </div>
    <div class="form-group">
        <label>Date de fin</label>
        <input class="form-control" type="text" name="nom" value="@Model.datefin" required>
    </div>
    <div class="form-group">
        <label>Lien hypertexte</label>
        <input class="form-control" type="text" name="nom" value="@Model.url" required>
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" rows="5" id="textArea" required>@Model.description</textarea>
    </div>
    <div class="form-group">
        <label>Affiche</label>
        <input type="file" name="pic" accept="image/*">
    </div>
    <div class="form-group pull-right">
        <button type="submit" class="btn btn-primary blue"><i class="fa fa-save"></i> <span>Enregistrer</span></button>
        <a href="/Events" class="btn btn-default" data-dismiss="modal">Annuler</a>
    </div>
</form>