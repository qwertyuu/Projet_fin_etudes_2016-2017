@using Abp.Web.Mvc.Extensions
@model Abp.Application.Services.Dto.ListResultOutput<ECJ.Users.Dto.UserListDto>
@section scripts
{
    @Html.IncludeScript("~/Views/CMemo/Index.js")
}

<div class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a href="/CMemo/Index" class="btn btn-primary" data-toggle="modal" data-target="#CMemo"><i class="fa fa-plus"></i> Créer un Mémo</a>
        </div>

    </div>
</div>


<div class="modal fade" tabindex="-1" id="UserCreateModal" role="dialog" aria-labelledby="UserCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="userCreateForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>Créer un nouveau mémo</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Destinataire</label>
                        <input type="text" name="Name" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label>Message</label>
                        <textarea name="EmailAddress" class="form-control" rows="10" cols="5" required></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary blue"><i class="fa fa-save"></i> <span>Ajouter</span></button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>