@using ECJ.Web.Models
@using ECJ.Authorization;
@using Abp.Web.Mvc.Extensions

@{
    ViewBag.Title = "Ajouter";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="form-group">
    <label>Nom</label>
    <input type="text" min=0 class="form-control" id="nomSalle" name="nomSalle">
</div>
<div class="form-group">
    <label>Prix</label>
    <input type="text" min=0 class="form-control montant positif" name="prix">
</div>
<div class="form-group">
    <label>Billets standard</label>
    <input type="number" min=0 class="form-control" id="totalBillet" name="billet">
</div>
<div class="form-group">
    <label>Billets VIP</label>
    <input type="number" min=0 class="form-control" id="BilletVIP" name="billetVIP">
</div>

<div class="form-group pull-right">
    <button class="btn btn-primary blue valid"><i class="fa fa-save"></i> <span>Ajouter</span></button>
    <a href="~/Salles" class="btn btn-default" data-dismiss="modal">Annuler</a>
</div>
}