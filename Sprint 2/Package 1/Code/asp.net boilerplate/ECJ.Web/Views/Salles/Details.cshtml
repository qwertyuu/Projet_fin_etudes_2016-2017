
@{
    ViewBag.Title = "DetailSalles";
}

<!DOCTYPE html>

<html>
<head>
    <title>Details</title>
</head>
<body>
    <div class="form-group">
        <label>Nom</label>
        <div class="well well-sm">
            @ViewBag.Salle.nomSalle
        </div>
    </div>
    <div class="form-group">
        <label>Prix</label>
        <div class="well well-sm">
            @ViewBag.Salle.prix$
        </div>
    </div>
    <div class="form-group">
        <label>Billets standard</label>
        <div class="well well-sm">
            @ViewBag.Salle.billet
        </div>
    </div>
    <div class="form-group">
        <label>Billets VIP</label>
        <div class="well well-sm">
            @ViewBag.Salle.billetVIP
        </div>
    </div>
    <div class="form-group">
        <label>Plan de la salle</label>
        <div class="well well-sm">
            <img src="@ViewBag.Salle.photoSalle"/>
        </div>
    </div>
    <div class="form-group">
        <label>Carte</label>
        <div class="well well-sm">
            <iframe src="@ViewBag.Salle.urlGoogleMap" width="500" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Services disponibles actuellement</th>
                <th class="col-md-2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in ViewBag.Service)
            {
                <tr>
                    <td>@s.nomService</td>
                    <td>
                        <button name="service_suppr" value="@s.noService" class="btn btn-sm btn-danger" title="Supprimer"><i class="fa fa-trash fa-lg"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button data-target="#ServiceAjoutModal" data-toggle="modal" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Ajouter un service</button>
</body>
</html>
